{
  "name": "domovoid",
  "version": "0.0.0",
  "private": true,
  "description": "AI Agent runtime for connecting claude (and other LLMs) to different channels and tools",
  "license": "MIT",
  "author": "Artur Udalov <artur.udalov@gmail.com>",
  "homepage": "https://github.com/darkartur/domovoid#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darkartur/domovoid.git"
  },
  "bugs": {
    "url": "https://github.com/darkartur/domovoid/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=22.16.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node ./packages/core/index.ts",
    "tsc": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fmt": "prettier --write .",
    "knip": "knip",
    "depcheck": "syncpack lint",
    "depfix": "syncpack fix",
    "test": "playwright test",
    "start:coverage": "NODE_V8_COVERAGE=coverage/tmp node ./packages/core/index.ts",
    "coverage:report": "c8 report --reporter=html --reporter=text --reports-dir=./coverage/html --temp-directory=./coverage/tmp",
    "coverage:check": "c8 check-coverage --100 --temp-directory=./coverage/tmp"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.3.0",
    "c8": "^10.1.3",
    "eslint": "^9.20.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.24.0",
    "eslint-plugin-playwright": "^2.7.1",
    "eslint-plugin-unicorn": "^63.0.0",
    "knip": "^5.85.0",
    "prettier": "^3.5.0",
    "syncpack": "^14.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.0"
  }
}
